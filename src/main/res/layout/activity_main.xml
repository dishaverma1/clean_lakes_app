<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.disha.cleanlakes.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/reportCard"
            android:layout_width="140dp"
            android:clickable="true"
            app:cardCornerRadius="30dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="200dp"
            android:layout_margin="10dp"

            >

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_report_black_24dp"
                    android:background="@drawable/imagebck"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/black"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/black"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Take Pictures now"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/uploadCard"
            android:layout_width="140dp"
            android:clickable="true"
            app:cardCornerRadius="30dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="200dp"
            android:layout_margin="10dp"

            >

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_file_upload_black_24dp"
                    android:background="@drawable/imagebck"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/black"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/black"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Pictures from\n\t\t\t\t Gallery"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    />

            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/loginCard"
            android:layout_width="140dp"
            android:clickable="true"
            app:cardCornerRadius="30dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="200dp"
            android:layout_margin="10dp"

            >

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_person_black_24dp"
                    android:background="@drawable/imagebck"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/black"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/black"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin? Login Now"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    />

            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>
    </LinearLayout>
